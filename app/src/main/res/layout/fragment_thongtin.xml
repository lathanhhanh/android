<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Thông tin tuyến xe"
        android:background="#4CAF50"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="22dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tuyến xe:"
            android:textSize="16dp" />

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/tv2Tuyen"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bình Liêu Hà Nội" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Biển số:"
            android:textSize="16dp" />

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/tv2BienSo"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bình Liêu Hà Nội" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá vé:"
            android:textSize="16dp" />
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/tv2GiaVe"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="150000 VND"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số ghế:"
            android:textSize="16dp" />

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/tv2SoGhe"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="39" />
    </LinearLayout>
    <TextView
        android:text="Thời gian"
        android:background="#4CAF50"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="22dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bình Liêu:"
            android:textSize="16dp" />

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/tv2ThoiGian1"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12h30 - 14h30" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bến đối lưu:"
            android:textSize="16dp" />

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/tv2ThoiGian2"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12h30 - 14h30" />
    </LinearLayout>
    <LinearLayout
        android:background="#4CAF50"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/callnow"
            android:text="Gọi Ngay "
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="("
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/tv2SoDienThoai"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="0123456789"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text=")"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>