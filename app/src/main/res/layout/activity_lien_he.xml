<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LienHeActivity">

    <TextView
        android:text="APP Thông Tin Xe Khách Bình Liêu"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:background="@drawable/bgif"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            android:text="Tên APP: Bình Liêu APP"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
        <TextView
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="16dp"
            android:text="Tình trạng: Đạng chạy thử nghiệm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="16dp"
            android:text="Thông tin liên hệ: facebook.com/lathanhhanh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="16dp"
            android:text="Bình Liêu APP 2019"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>